entrypoint = "index.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["sh", "-c", "cd scholars-stribe && npm start"]
deploymentTarget = "autoscale"
ignorePorts = false
build = ["sh", "-c", "cd scholars-stribe && npm run build"]

[[ports]]
localPort = 3000
externalPort = 80

[workflows]
runButton = "Next.js Development Server"

[[workflows.workflow]]
name = "Next.js Development Server"
author = 45341793
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd scholars-stribe && npm run dev"
